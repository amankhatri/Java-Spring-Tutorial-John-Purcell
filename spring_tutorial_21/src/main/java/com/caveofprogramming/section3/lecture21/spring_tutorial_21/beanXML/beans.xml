<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-autowire="byType"
	default-autowire-candidates="consoleWriter,fileWriter">

	<bean id="logger"
		class="com.caveofprogramming.section3.lecture21spring_tutorial_21.Logger"> </bean>

	<bean name="consoleWriter"
		class="com.caveofprogramming.section3.lecture21spring_tutorial_21.ConsoleWriter"> </bean>

	<bean id="fileWriter"
		class="com.caveofprogramming.section3.lecture21spring_tutorial_21.FileWriter"> </bean>
		
	<bean id="logWriter"
		class="com.caveofprogramming.section3.lecture21spring_tutorial_21.FileWriter"> </bean>
</beans>
